 @model MyBlog.Models.Blog
   
 <header class="masthead" style="background-image: url('@Model.ImagePath')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>@Model.Title</h1>      
            <h2 class="subheading">@Model.Subtitle</h2>
            <span class="meta">Posted by
             @Model.Author.Name
              on @Model.CreateTime</span>
          </div>  
        </div>
      </div>
    </div>
  </header>
 <div class="container">

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
             <div class="col-lg-8 col-md-10 mx-auto">
                 @Html.Raw(Model.Content)
             </div>
                   <div>
                    <div class="card" style="width: 18rem ; ">
                    <img class="card-img-top" style="" src="https://fastly.picsum.photos/id/551/200/200.jpg?hmac=vxRitsvMJEbK15DKl4ZRj7NQWF6RTfzBvievdi9q96s" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">lorem ipsum  </h5>
                            <p class="card-text">Lorem ipsum doporta, aliquet mauris ac, tincidunt libero.</p>
                            <a href="#" class="btn btn-primary d-flex align-items-center justify-content-center">Go somewhere</a>
                            <hr />
                         </div>
                     </div>
                   </div>
      </div>
    </div>
  </article>

 <article>
        <div class="container">
            <div class="row">
                <!-- Yorumlarý gösterme -->
                <div class="col-lg-8 col-md-10 mx-auto">  
                    <ul>
                        @foreach (var comment in Model.Comments)
                        {
                                <li>
                                <strong>@comment.UserName</strong>
                                <p>@comment.Content</p> <!-- Bu satýr yorum içeriðini görüntüler -->
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </article>

    <div class="content-form container-fluid">
        <h3 class="mt-3 pt-3 pb-3 pl-5">Add Comment</h3>
        <form action="@Url.Action("Post", "Home")" method="post">
  
            <div class="form-group pl-5 pr-5 pb-5">
                <textarea class="form-control mt-2 mb-3" style="width: 100%;" rows="3" name="commentContent" placeholder="Comment"></textarea>
                <div class="d-flex">
                    <input type="text" name="emailAddress" placeholder="Email Address" required class="form-control mr-2" style="flex: 1;" />
                    <input type="text" name="name" placeholder="Name" required class="form-control" style="flex: 1;" />
                </div>
                <input type="submit" value="Send" class="btn btn-primary float-right mt-2" style="height: 30px; width: 100px; padding: 2px;" />
            </div>
        </form> 
    </div>
</div>